<Window x:Class="内置路由事件_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="300" Width="300">
    <Grid Name="gridRoot" Background="Lime" Button.Click="Button_Click">
        <Grid Name="gridA" Background="Blue" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Canvas x:Name="canvasLeft" Background="Red" Margin="10">
                <Button x:Name="buttonLeft" Width="40" Height="100" Margin="10">Left</Button>
            </Canvas>

            <Canvas x:Name="canvasRight" Background="Yellow" Grid.Column="1" Margin="10">
                <Button x:Name="buttonRight" Width="40" Height="100" Margin="10">Right</Button>
            </Canvas>
        </Grid>
        
    </Grid>
</Window>
